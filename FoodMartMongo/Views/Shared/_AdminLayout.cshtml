<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FoodMart Admin Panel</title>

    <!-- BOOTSTRAP -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- ICONS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        body {
            background: #f5f6fa;
            font-family: 'Nunito', sans-serif;
        }

        /* Sidebar görünmez - arka planla aynı */
        .admin-sidebar {
            width: 250px;
            background: #ffffff; /* panel arka planıyla aynı renk */
            color: #0b213f;
            min-height: 100vh;
            position: fixed;
            left: 0;
            top: 0;
            padding-top: 70px;
            border-right: none; /* çizgi yok */
            box-shadow: none !important;
        }

            /* Sidebar linkleri: çizgi yok, tamamen düz */
            .admin-sidebar a {
                color: #0b213f;
                padding: 14px 20px;
                display: block;
                text-decoration: none;
                border-bottom: none; /* çizgi kaldırıldı */
                background: transparent;
            }

                /* Hover efekti: çok hafif */
                .admin-sidebar a:hover {
                    background: #d6e6ff; /* çok çok soft bir hover */
                    color: #000;
                }


        /* Topbar zaten mükemmel, dokunmuyoruz */


        /* ⭐️ YENİ SOFT TOPBAR */
        .admin-topbar {
            height: 70px;
            background: #9ec5fe; /* Pastel mavi */
            color: #0a2a47;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 20px;
            position: fixed;
            width: 100%;
            z-index: 1000;
            border-bottom: 3px solid #6ea8fe;
            font-weight: 700;
        }

        /* İçerik */
        .admin-content {
            margin-left: 260px;
            padding: 100px 30px 40px;
        }
    </style>
</head>
<body>

    <!-- TOP NAVBAR -->
    <div class="admin-topbar">
        <div class="fw-bold fs-5">FoodMart <span style="color:#facc15">AdminPanel</span></div>
        <div>
            <a href="/" class="btn btn-sm btn-outline-dark">Çıkış</a>
        </div>
    </div>

    <!-- SIDEBAR -->
    <div class="admin-sidebar">
        <a href="/Admin/Dashboard"><i class="fa fa-home me-2"></i> Dashboard</a>
        <a href="/Product/CreateProduct"><i class="fa fa-plus"></i> Ürün Ekle</a>
        <a href="/Product/ProductList"><i class="fa fa-box me-2"></i> Ürünler</a>
        <a href="/Category/CreateCategory"><i class="fa fa-plus"></i> Kategori Ekle</a>
        <a href="/Category/CategoryList"><i class="fa fa-list me-2"></i> Kategoriler</a>
    </div>

    <!-- CONTENT -->
    <div class="admin-content">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
