<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FoodMart Admin Panel</title>

    <!-- BOOTSTRAP -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- ICONS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- CUSTOM STYLE -->
    <style>
        body {
            background: #f5f6fa;
            font-family: 'Nunito', sans-serif;
        }

        .admin-sidebar {
            width: 250px;
            background: #1f2937;
            color: #fff;
            min-height: 100vh;
            position: fixed;
            left: 0;
            top: 0;
            padding-top: 70px;
        }

            .admin-sidebar a {
                color: #e5e7eb;
                padding: 14px 20px;
                display: block;
                border-bottom: 1px solid #374151;
                text-decoration: none;
                font-size: 15px;
            }

                .admin-sidebar a:hover {
                    background: #374151;
                    color: #fff;
                }

        .admin-topbar {
            height: 70px;
            background: #111827;
            color: white;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 20px;
            position: fixed;
            width: 100%;
            z-index: 1000;
        }

        .admin-content {
            margin-left: 260px;
            padding: 100px 30px 40px;
        }
    </style>
</head>
<body>

    <!-- TOP NAVBAR -->
    <div class="admin-topbar">
        <div class="fw-bold fs-5">FoodMart <span style="color:#facc15">AdminPanel</span></div>
        <div>
            <a href="/" class="btn btn-sm btn-danger">Çıkış</a>
        </div>
    </div>

    <!-- SIDEBAR -->
    <div class="admin-sidebar">
        <a href="/Admin/Dashboard"><i class="fa fa-home me-2"></i> Dashboard</a>
        <a href="/Product/CreateProduct"><i class="fa fa-plus"></i> Ürün Ekle</a>
        <a href="/Product/ProductList"><i class="fa fa-box me-2"></i> Ürünler</a>
        <a href="/Category/CreateCategory"><i class="fa fa-plus"></i> Kategori Ekle</a>
        <a href="/Category/CategoryList"><i class="fa fa-list me-2"></i> Kategoriler</a>
        <a href="/Feature/FeatureList"><i class="fa fa-star me-2"></i> Öne Çıkanlar</a>
    </div>

    <!-- CONTENT -->
    <div class="admin-content">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
